function nopotential(filename, u, xij, xik, xil, xi, xj, xk, xl, qi, qj, qk, ql, ti, tj, tk, tl, ai, aj, ak, al, mu, pot)

ifile = 0;
gen = 0;
if pot==0
elseif pot==1    
    [stropu, strcpu, strgpu] = gensingle(filename, u, xi, qi, ti, ai, mu, gen, ifile);
elseif pot==2
    [stropu, strcpu, strgpu] = genpair(filename, u, xij, qi, qj, ti, tj, ai, aj, mu, gen, ifile);
elseif pot==3
    [stropu, strcpu, strgpu] = gentriplet(filename, u, xij, xik, qi, qj, qk, ti, tj, tk, ai, aj, ak, mu, gen, ifile);
elseif pot==4    
    [stropu, strcpu, strgpu] = genquadruplet(filename, u, xij, xik, xil, qi, qj, qk, ql, ti, tj, tk, tl, ai, aj, ak, al, mu, gen, ifile);
end    
cppfiles(filename, stropu, strcpu, strgpu, 1);
